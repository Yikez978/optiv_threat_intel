<form>
    <label>Threat Intel Host Search - Domains</label>

    <!-- define master search template, with replacement tokens delimited with $ -->
    <!--<searchTemplate>index=* host=$hst$ [search index=optiv earliest=-24h@h | stats count by dest_ip]</searchTemplate>
   index=honeypot earliest=-7d [search index=optiv earliest=-3h| dedup dest_ip |rename dest_ip AS ip_addr | table ip_addr]-->
    <searchTemplate>index=* host=$hst$ [search `optiv_index` earliest=-72h | dedup dest | table dest] </searchTemplate>
    <fieldset>
        <!-- Define a simple dropdown form driven by a search -->
        <input type="dropdown" token="hst">
            <label>Select host</label>
            <choice value="*">Any</choice>
            <populatingSearch fieldForValue="host" fieldForLabel="host"><![CDATA[index=* host=* | stats count by host]]></populatingSearch>
        </input>
        <input type="time" searchWhenChanged="true">
           <default>
             <earliest>-4h@h</earliest>
             <latest>now</latest>
           </default>
        </input>

    </fieldset>

    <row>
        <!-- output the results as a 50 row events view -->
        <event>
            <title>Results</title>
            <option name="count">250</option>
        </event>
    </row>
</form>
